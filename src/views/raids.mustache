            */
        });
        table.on('draw.dt', function() {
            setTimeout(function () {
                table.ajax.reload(null, false);
            }, 30 * 1000);
        });
        let detailRows = [];
        $('#table tbody').on('click', 'tr td', function() {
            let tr = $(this).closest('tr');
            let row = table.row(tr);
            let index = $.inArray(tr.attr('id'), detailRows);
            if (row.child.isShown()) {
                row.child.hide();
                tr.removeClass('shown');
                detailRows.splice(index, 1);
            }
            else {
                row.child(format(row.data())).show();
                tr.addClass('shown');
                detailRows.push(tr.attr('id'));
            }
        });
    
        // On each draw, loop over the `detailRows` array and show any child rows
        table.on('draw', function() {
            $.each(detailRows, function (i, id) {
                $(`#${id} td.details-control`).trigger('click');
            });
        });

        function format (data) {
            let content = `
            <div class="expanded-row">
                <div class="row justify-content-center">
                    <h5>${data.gym_name}</h5>
                </div>
                <div class="row justify-content-left">
                    <div class="col">
                        <b>Moveset:</b> ${data.move1}/${data.move2}<br>
                    </div>
                    <div class="col">
                        <b>EX-Eligible:</b> ${data.ex_eligible}<br>
                    </div>
                    <div class="col">
                        <b>Team:</b> ${data.team}<br>
                    </div>
                    <div class="col">
                        <b>Level:</b> ${data.raid_level.formatted}<br>
                    </div>
                `;
            if (data.form) {
                content += `
                <div class="col">
                    <b>Form:</b> ${data.form}<br>
                </div>
                `;
            }
            if (data.costume) {
                content += `
                <div class="col">
                    <b>Costume:</b> ${data.costume}<br>
                </div>
                `;
            }
            if (data.evolution) {
                content += `
                <div class="col">
                    <b>Evolution:</b> ${data.evolution}<br>
                </div>
                `;
            }
            if (data.cp > 0) {
                content += `
                <div class="col">
                    <b>CP:</b> ${data.cp}<br>
                </div>
                `;
            }
            if (data.gender > 0) {
                content += `
                <div class="col">
                    <b>Gender:</b> ${data.gender}<br>
                </div>
                `;
            }
            content += `
                </div>
            </div>
            `;
            return content;
        }

        function reload() {
            var pokemon = $('#filter-pokemon').val();
            var gym = $('#filter-gym').val();
            var level = $('#filter-level').val();
            var city = $('#filter-city').val();
            var team = $('#filter-team').val();
            var ex = $('#filter-ex').val();
            var query = `?pokemon=${pokemon}&gym=${gym}&level=${level}&city=${city}&team=${team}&ex=${ex}`;
            table.ajax.url('/api/raids' + query).load();

            // Cache filter values
            set('raids_filter_pokemon', pokemon);
            set('raids_filter_gym', gym);
            set('raids_filter_level', level);
            set('raids_filter_city', JSON.stringify(city));
            set('raids_filter_team', team);
            set('raids_filter_ex', ex);
        }
        $('#reset-filters').on('click', function() {
            $('#filter-pokemon').val('');
            $('#filter-gym').val('');
            $('#filter-city').val('all');
            $('#filter-level').val('all');
            $('#filter-team').val('all');
            $('#filter-ex').val('all');
            reload();
        });

        var ctx = document.getElementById('canvas').getContext('2d');
		var raidChart = new Chart(ctx, {
            type: "line",
            data: {
                labels: [],
                datasets: []
            },
            options: {
                tooltips: true,
                elements: {
                    rectangle: {
                        backgroundColor: "dodgerblue",
                        borderColor: colorize.bind(null, true, false),
                        borderWidth: 0.5
                    }
                },
                responsive: true,
                maintainAspectRatio: true,
                legend: {
                    display: false,
                    position: 'right',
                },
                title: {
                    display: true,
                    text: 'Raid Boss Statistics'
                },
                tooltips: { mode: "index", intersect: false, },
                hover: { mode: "nearest", intersect: true },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Date'
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Amount'
                        }
                    }]
                }
            }
        });
        function getStats() {
            var start = $('#stats-start').val();
            var end = $('#stats-end').val();
            var pokemon = $('#stats-pokemon').val();
            $.ajax({
                url: `/api/stats?type=raids&start=${start}&end=${end}&pokemon_id=${pokemon}`,
                type: 'POST', 
                success: function(result) {
                    if (result === null) {
                        console.log("Failed to parse result value.");
                        return;
                    }
                    console.log("Result:", result);
                    if (result) {
                        var labels = [];
                        var values = [];
                        $.each(result.stats, function(key, value) {
                            labels.push(value.date);
                            var value = parseInt(value.count);
                            values.push(value);
                        });
                        removeDataset(raidChart);
                        var obj = { 
                            labels: labels, 
                            datasets: [{
                                data: values,
                                backgroundColor: "dodgerblue",
                                borderColor: "gray",
                                label: "Raid Boss",
                                fill: false
                            }]
                        };
                        raidChart.data = obj;
                        raidChart.update();

                        /*
                        removeDataset(raidChart);
                        for (var i = 0; i < result.stats.length; i++) {
                            var stat = result.stats[i];
                            addDataset(raidChart, [], { data: [stat.count], backgroundColor: '#' + randomColor(), borderColor: 'White', borderWidth: 0.3, label: stat.date });
                        }
                        */
                    }
                }
            });
        }
